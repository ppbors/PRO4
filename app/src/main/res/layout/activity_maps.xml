
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MapsActivity">

<fragment
    android:id="@+id/map"
    android:name="com.example.philippebors.volgjevrienden.MapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/button_menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:src="@drawable/ic_menu"
        android:onClick="ToonAlleData"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <ImageButton
        android:id="@+id/button_menu4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000ff"
        android:src="@drawable/ic_menu"
        android:onClick="Login"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_menu2"
        android:layout_toRightOf="@+id/button_menu2"
        android:background="#00ff00"
        android:onClick="ToonJeVrienden"
        android:src="@drawable/ic_menu" />

    <ImageButton
        android:id="@+id/button_menu3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:onClick="writeDatabase"
        android:src="@drawable/ic_menu"
        android:text="hello"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:onClick="friendsButton"
        android:visibility="gone"
        android:text="Friends" />



</RelativeLayout>